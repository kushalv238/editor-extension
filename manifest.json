{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Editor Extension",
    "description": "This is an extension for a editor app.",
    "author": "DJSCE",
    "action": {
        "default_popup": "/src/html/index.html",
        "default_title": "Editor Extension"
    },
    "background": {
        "service_worker": "/src/script/background.js"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["/src/script/contentScript.js"]
        }
    ],
    "permissions": ["tabs", "storage", "scripting"]
}